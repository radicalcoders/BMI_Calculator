<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/unnamed1"
    android:orientation="vertical"
    tools:context="com.workshop.bmi_calculator.Second_Activity">

    <TextView
        android:text="TextView"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disp_weight"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="#1A237E"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:text="TextView"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disp_weight1"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="#1A237E"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:text="TextView"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disp_height"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:text="TextView"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disp_height1"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:text="TextView"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="#1A237E"
        android:textStyle="bold|italic"
        android:id="@+id/disp_bmi"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:text="TextView"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/arrow_down_float"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textColor="#1A237E"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:id="@+id/disp_status" />

</LinearLayout>
